<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
    	<form-bean name="helloWorld" type="helloworld_sturts.Message"/>
    </form-beans>
    
    <action-mappings>
        <action path="/hello" type="helloworld_sturts.HelloWorld" name="helloWorld">
        	<forward name="success" path="/hellowolrd.jsp" />
        </action>
    </action-mappings>

</struts-config>